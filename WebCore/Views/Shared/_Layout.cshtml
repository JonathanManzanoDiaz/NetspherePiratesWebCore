@{ 
    var User = ViewData["Account"] as string;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebCore</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar navbar-default">
        <div class="navbar-header">
            <a class="navbar-brand" href="./"> Netsphere </a>
            <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="btn btn-sm">Show</span>
            </button>
        </div>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <ul class="nav navbar-nav">
                <li class="nav-item">
                    <a href="./Home" class="nav-link">Inicio</a>
                </li>
                <li class="nav-item nav-link"><a href="./Register">Registrate</a></li>
                <li class="dropdown">
                    <a class="dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Comunidad
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <li class="dropdown-item"><a href="#">Guias</a></li>
                        <li class="dropdown-item"><a href="#">Foros</a></li>
                        <li class="dropdown-item"><a href="#">Videos</a></li>
                        <li class="dropdown-item"><a href="#">Fotos</a></li>
                    </ul>
                </li>
                <li class="nav-item"><a href="#" class="nav-link">NetsphereCoin</a></li>
                
            </ul>
            <ul class="nav navbar-form navbar-right">
                <li class="dropdown">
                    @if (User == null)
    {
                <a class="dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Iniciar Session
                    <span class="caret"></span>
                </a>
                <div class="dropdown-menu panel panel-default" aria-labelledby="navbarDropdownMenuLink">
                    <div class="panel-heading">Ingresar</div>
                    <div class="panel-body">
                        <form action="/Account/Login" method="post">
                            <div class="form-group"><input type="text" class="form-control" id="luser" name="user" placeholder="Usuario" /></div>
                            <div class="form-group"><input type="password" class="form-control" id="lpwd" name="pwd" placeholder="Contraseña" /></div>
                            <div class="form-group"><input type="checkbox" id="rem" name="remember" value="recordar" /><label for="rem">Recordar</label></div>
                            <div><input type="submit" class="btn btn-primary" value="Entrar" /></div>
                        </form>
                    </div>
                </div>
}
else
{
                <a class="dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    @User
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                    <li class="dropdown-item"><a href="./Account">Perfil</a></li>
                    <li class="dropdown-item"><a href="./Account/Logout">Cerrar Session</a></li>
                </ul>
}
                </li>
            </ul>
        </div>
    </nav>
    <div id="react-navbar"></div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2017 - WebCore</p>
        </footer>
    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="~/dist/commons.js"></script>
    <script src="~/dist/libs.js"></script>
    <!--<script src="~/dist/_Layout.js"></script>-->
    @RenderSection("Scripts", required: false)
</body>
</html>
